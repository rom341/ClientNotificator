<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClientCreator.CreateNewClientPage"
             xmlns:viewmodel="clr-namespace:ClientCreator.ViewModels"
             x:DataType="viewmodel:CreateNewClientViewModel"
             >
    <ContentPage.Content>
        <StackLayout Padding="20">
            <!-- Кнопка создания клиента -->
            <Button x:Name="btnCreate" Text="Создать" Command="{Binding CreateClientCommand}" VerticalOptions="Start" HorizontalOptions="CenterAndExpand"/>

            <!-- Поля для ввода данных -->
            <Entry Placeholder="ФИО" Text="{Binding Client.PersonalInfo.FullName, Mode=TwoWay}" />
            <Entry Placeholder="Номер телефона" Text="{Binding Client.Contacts.PhoneNumber, Mode=TwoWay}" />
            <Entry Placeholder="Электронная почта" Text="{Binding Client.Contacts.EmailAddress, Mode=TwoWay}" />
            <Entry Placeholder="Имя в телеграме" Text="{Binding Client.Contacts.TelegramName, Mode=TwoWay}" />
            <Entry Placeholder="Идентификатор в телеграме" Text="{Binding Client.Contacts.TelegramName, Mode=TwoWay}" />
            <DatePicker Date="{Binding Client.PersonalInfo.BirthDate, Mode=TwoWay}" />
            <DatePicker Date="{Binding Client.NextVisitDate, Mode=TwoWay}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>