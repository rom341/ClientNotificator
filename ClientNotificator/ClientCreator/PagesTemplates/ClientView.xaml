<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClientCreator.PagesTemplates.ClientView"
             Title="ClientView">
    <StackLayout Padding="10">
        <Label Text="{Binding PersonalInfo.FullName}" FontSize="Large" />
        <Label Text="{Binding Contacts.EmailAddress}" />
        <Label Text="{Binding Contacts.PhoneNumber}" />
        <!-- Добавьте здесь другие свойства, которые вы хотите отобразить для клиента -->
    </StackLayout>
</ContentPage>