<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClientCreator.MainPage"
             xmlns:viewmodel="clr-namespace:ClientCreator.ViewModels">

    <!-- Добавляем экземпляр ViewModel в качестве ресурса -->
    <ContentPage.Resources>
        <viewmodel:MainPageViewModel x:Key="MainPageViewModel" />
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <!-- Ваш существующий контент -->

            <!-- Кнопка для открытия страницы создания нового клиента -->
            <Button
                Text="Создать нового клиента"
                Command="{Binding ShowCreateNewClientPageCommand, Source={StaticResource MainPageViewModel}}"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
