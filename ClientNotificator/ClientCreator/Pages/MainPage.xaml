<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClientCreator.MainPage"
             xmlns:viewmodel="clr-namespace:ClientCreator.ViewModels"
             xmlns:views="clr-namespace:ClientCreator.PagesTemplates"
             xmlns:model="clr-namespace:ClientCreator.Models">

    <ContentPage.Resources>
        <viewmodel:MainPageViewModel x:Key="MainPageViewModel" />
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            
            <Button
                Text="Создать нового клиента"
                Command="{Binding ShowCreateNewClientPageCommand}"
                HorizontalOptions="Fill" />
            
            <Button
                Text="Показать список клиентов"
                Command="{Binding ShowClientsPageCommand}"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
